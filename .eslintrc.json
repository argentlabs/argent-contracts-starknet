{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["plugin:@typescript-eslint/recommended"],
  "env": {
    "node": true
  },
  "rules": {
    "@typescript-eslint/no-floating-promises": "error"
  },
  "ignorePatterns": ["dist", "cairo", "examples"]
}
